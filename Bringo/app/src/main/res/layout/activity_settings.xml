<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bringo.SettingsActivity">

    <ImageButton
        android:layout_width="150dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/imageButton"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp" />

    <TextView
        android:text="  Access to Google Calendar"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        tools:paddingTop="20px"
        android:textStyle="normal|bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="  Access to Bluetooth"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        tools:paddingTop="20px"
        android:textStyle="normal|bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="  Travel information reminders"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        tools:paddingTop="20px"
        android:textStyle="normal|bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <Button
        android:text="  Contact us"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:id="@+id/contact_us_button"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_light"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:text="  Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version_button"
        android:layout_below="@+id/contact_us_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:background="@android:color/holo_blue_light" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_switch"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_switch"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetooth_switch"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cal_rmd_switch"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/travel_rmd_switch"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Log out"
        android:id="@+id/button2"
        android:fontFamily="casual"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/weather_switch"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:text="  Privacy"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="17dp"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="?android:attr/colorBackground"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        tools:background="@android:color/holo_blue_light"
        tools:paddingTop="8px"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="  Access to location and weather"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        tools:paddingTop="20px"
        android:textStyle="normal|bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="  Notifications"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:id="@+id/textView8"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="?android:attr/colorBackground"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        tools:background="@android:color/holo_blue_light"
        tools:paddingTop="8px"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="  Calendar reminders"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        tools:paddingTop="20px"
        android:textStyle="normal|bold"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Anonymous User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2" />

</RelativeLayout>
