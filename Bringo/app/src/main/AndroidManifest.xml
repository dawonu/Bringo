<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bringo">

    <!-- To enable the connection with network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To enable the alarm -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <!--To enable access to current location-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- To enable bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application

        android:theme="@style/Theme.AppCompat.Light.NoActionBar"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".BringoApplication"
        android:supportsRtl="true"

        >
        <meta-data android:name="DATABASE" android:value="bringo.db" />
        <meta-data android:name="VERSION" android:value="3" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example.bringo" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity android:name=".CreateSceActivity"/>
        <receiver android:name=".NotificationReceiver"/>

        <!-- Set HomeActivity as the launcher page -->
        <activity android:name=".HomeActivity">


        </activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".RegisterActivity">

        </activity>

        <activity android:name=".TrackActivity">
        </activity>
    </application>

</manifest>